<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Assignments</title>
        <!-- Add Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
      </head>
      
<body>
  <div class="container mt-5">
    <!-- Error Alert -->
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <h1 class="text-center mb-4">Assignment List</h1>
    
    <!-- Add New Assignment Button -->
    <a href="/new" class="btn btn-primary mb-3">Add New Assignment</a>

    <!-- Assignments List -->
    <% if (assignments.length > 0) { %>
      <ul class="list-group">
        <% assignments.forEach(assignment => { %>
          <li class="list-group-item">
            <strong>Title:</strong> <%= assignment.title %><br>
            <strong>Description:</strong> <%= assignment.description %><br>
            <strong>Due Date:</strong> <%= assignment.dueDate.toDateString() %>
            <form action="/delete/<%= assignment._id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm float-end" onclick="return confirm('Are you sure you want to delete this assignment?')">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <!-- No Assignments Message -->
      <div class="alert alert-warning" role="alert">
        No assignments found. Please add a new assignment.
      </div>
    <% } %>
  </div>
</body>
</html>
