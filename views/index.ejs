<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assignment Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Assignment Tracker</a>
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/new">Add Assignment</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Container -->
  <div class="container">
    <% if (error) { %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
    <% } %>

    <!-- Search and Sort -->
    <form action="/" method="GET" class="mb-3">
      <div class="input-group">
        <input
          type="text"
          name="search"
          class="form-control"
          placeholder="Search assignments..."
          value="<%= search || '' %>"
        />
        <select name="sortBy" class="form-select">
          <option value="dueDate" <%= sortBy === 'dueDate' ? 'selected' : '' %>>Sort by Due Date</option>
          <option value="title" <%= sortBy === 'title' ? 'selected' : '' %>>Sort by Title</option>
        </select>
        <button type="submit" class="btn btn-outline-primary">Apply</button>
      </div>
    </form>

    <h1 class="text-center mb-4">Assignment List</h1>

    <% if (assignments.length > 0) { %>
      <ul class="list-group">
        <% assignments.forEach(assignment => { %>
          <li class="list-group-item">
            <strong>Title:</strong> <%= assignment.title %><br>
            <strong>Description:</strong> <%= assignment.description %><br>
            <strong>Due Date:</strong> <%= assignment.dueDate.toDateString() %>
            <form action="/delete/<%= assignment._id %>" method="POST" style="display:inline;">
              <button class="btn btn-danger btn-sm float-end" onclick="return confirm('Are you sure you want to delete this assignment?')">Delete</button>
            </form>
            <a href="/edit/<%= assignment._id %>" class="btn btn-warning btn-sm float-end me-2">Edit</a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <div class="alert alert-warning" role="alert">
        No assignments found. Please add a new assignment.
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
